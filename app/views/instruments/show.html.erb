<div class="container p-2">
  <div class="card rounded p-3" style="width: 400px">
    <h1><%= @instrument.model %></h1>
    <p><%= @instrument.location %></p>
    <p><%= "Price: #{@instrument.price}0â‚¬/day" %></p>
    <p><%= "Owner: #{(@instrument.user.name).capitalize}" %></p>
    <% if @instrument.photo.attached? %>
      <p><%= cl_image_tag @instrument.photo.key, height: 300, width: 400, crop: :fill %><p>
    <% end %>
  </div>

  <div class="row">
    <div class="col-12 d-flex justify-content-start">
      <%= link_to "Back to all instruments", instruments_path, class: "btn btn-primary m-4" %>
