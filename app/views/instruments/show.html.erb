<div style="background-color: #F5F5F5; border-radius: 10px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); max-width: 600px; margin: 0 auto; padding: 40px; text-align: center; margin-top: 110px">
  <h1 style="font-size: 36px; margin-bottom: 20px;"><%= @instrument.model %></h1>
  <p style="font-size: 18px; line-height: 24px; margin-bottom: 10px;"><%= "address: #{@instrument.address}" %></p>
  <p style="font-size: 18px; line-height: 24px; margin-bottom: 10px;"><%= "Price: #{@instrument.price}0â‚¬/day" %></p>
  <p style="font-size: 18px; line-height: 24px; margin-bottom: 10px;"><%= "Owner: #{(@instrument.user.name).capitalize}" %></p>
  <% if @instrument.photo.attached? %>
    <p><%= cl_image_tag @instrument.photo.key, style: "border-radius: 10px; margin-bottom: 20px; max-width: 100%;" %><p>
  <% end %>

  <div class="row mb-3">
    <div class="col-lg-12 text-center">
      <div class="d-flex justify-content-between align-items-center">
        <%= link_to fa_icon("angle-left", class: "fa-solid fa-2x mr-2", style: 'color: black; font-size: 40px;'), instruments_path %>
           <% if current_user != @instrument.user %>
        <%= link_to "Reserve this instrument", new_instrument_reservation_path(@instrument), style: "background-color: #2156af; border-radius: 20px; border: none; color: #FFFFFF; font-size: 20px; font-weight: bold; padding: 10px 20px; text-decoration: none; transition: all 0.3s ease-in-out;" %>
      <% end %>
          <% if current_user == @instrument.user %>
            <%= link_to "Delete", instrument_path(@instrument), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger m-4' %>
          <% end %>
      </div>
    </div>
  </div>
</div>
