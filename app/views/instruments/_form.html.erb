<div class="container p-4 bg-light rounded" style="margin-top: 200px;">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <%= simple_form_for(instrument) do |f| %>
        <div class="row mb-3">
          <div class="col-lg-12 text-center">
            <h3 class="fw-bold">New Instrument</h3>
            <p class="lead">Fill in the details below to add a new instrument</p>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-lg-6">
            <%= f.input :model, label: "Model", placeholder: "Enter the model" %>
          </div>
          <div class="col-lg-6">
            <%= f.input :address, label: "address", placeholder: "Enter the address" %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-lg-6">
            <%= f.input :price, label: "Price (â‚¬)", placeholder: "Enter the price" %>
          </div>
          <div class="col-lg-6">
            <%= f.input :photo, label: "Photo", as: :file %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-lg-12 text-center">
            <div class="d-flex justify-content-between align-items-center">
              <%= link_to fa_icon("angle-left", class: "fa-solid fa-2x mr-2", style: 'color: black; font-size: 40px;'), instruments_path %>
              <%= f.submit "Create Instrument", class: "btn btn btn-primary rounded-pill px-5" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
