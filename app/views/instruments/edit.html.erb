<div class="container p-2">
<h1> Edit or remove your <%= @instrument.model %></h1>
<%= simple_form_for(@instrument) do |f| %>
  <%= f.input :model %>
  <%= f.input :location %>
  <%= f.input :price, label: 'Price (â‚¬)' %>
  <%= f.input :photo, as: :file %>
  <%= f.submit 'Update' %>
<% end %>

<div class="row">
    <div class="col-lg-12 d-flex justify-content-start">
      <%= link_to "Back to all instruments", instruments_path, class: "btn btn-primary m-4" %>
      <%= link_to "Delete", instrument_path(@instrument), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger m-4'%>

    </div>
  </div>
</div>
