<%= simple_form_for(reservation), data: { controller: 'flatpickr' } do |f| %>
  <%= f.input :start_date, as: :date, label: 'Start Date', input_html: { data: { flatpickr_target: "startTime" } } %>
  <%= f.input :end_date, as: :date, label: 'End Date', input_html: { data: { flatpickr_target: "endTime" } } %>
  <%= f.submit %>
<% end %>
